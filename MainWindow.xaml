<Window x:Class="HeightConverter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HeightConverter"
        mc:Ignorable="d"
        Title="MainWindow" Height="250" Width="400"
        ResizeMode="NoResize">
    <Grid>
        <Label Content="Enter cm:" HorizontalAlignment="Left" Margin="10,35,0,0" VerticalAlignment="Top"/>
        <TextBox Name="enteredCm" HorizontalAlignment="Left" Margin="10,70,0,0" VerticalAlignment="Top" Width="120"/>
        <Button Click="ConvertCmBtnClick" Content="Convert to inch" HorizontalAlignment="Left" Margin="10,100,0,0" VerticalAlignment="Top" Height="25" Width="90"></Button>

        <Label Content="Enter inches:" HorizontalAlignment="Right" Margin="0,35,53,0" VerticalAlignment="Top"/>
        <TextBox Name="enteredInch" HorizontalAlignment="Right" Margin="0,70,10,0" VerticalAlignment="Top" Width="120"/>
        <Button Click="ConvertInchBtnClick" Content="Convert to cm" HorizontalAlignment="Right" Margin="0,100,40,0" VerticalAlignment="Top" Height="25" Width="90"/>

        <Label Content="Cm - Inches Converter" HorizontalAlignment="Center" Margin="0,0,0,25" VerticalAlignment="Bottom" FontSize="20" FontWeight="Bold"/>

    </Grid>
</Window>
